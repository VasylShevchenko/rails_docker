<div class="signin-wrapper">

  <div class="signin-box signup">
    <h3 class="signin-title-primary">Get Started!</h3>
    <h5 class="signin-title-secondary lh-4">It's free to signup and only takes a minute.</h5>

    <%= form_for @user do |f| %>
      <div class="row row-xs mg-b-10">
        <div class="col-sm">
          <!--          <input type="text" class="form-control" placeholder="Firstname">-->
          <%= f.text_field :first_name, class: 'form-control', placeholder: 'Firstname', required: true %>
        </div>
      </div><!-- row -->

      <div class="row row-xs mg-b-10">
        <div class="col-sm mg-t-10 mg-sm-t-0">
          <!--          <input type="text" class="form-control" placeholder="Lastname">-->
          <%= f.text_field :last_name, class: 'form-control', placeholder: 'Lastname', required: true %>
        </div>
      </div><!-- row -->

      <div class="row row-xs mg-b-10">
        <div class="col-sm">
          <!--          <input type="email" class="form-control" placeholder="Email">-->
          <%= f.text_field :email, class: 'form-control', placeholder: 'Email', required: true %>
        </div>
      </div><!-- row -->

      <div class="row row-xs mg-b-10">
        <div class="col-sm mg-t-10 mg-sm-t-0">
          <!--          <input type="password" class="form-control" placeholder="Password">-->
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: true %>
        </div>
        <div class="col-sm mg-t-10 mg-sm-t-0">
          <!--          <input type="password" class="form-control" placeholder="Password confirmation">-->
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation', required: true %>
        </div>
      </div><!-- row -->

      <button class="btn btn-primary btn-block btn-signin">Sign Up</button>
    <% end %>
    <p class="mg-t-40 mg-b-0">Already have an account? <%= link_to 'Sign Up', login_path %></p>
  </div><!-- signin-box -->

</div>
